@model CategoryIndexViewModel

<table class="table">
    <thead>
    <th scope="col" colspan="3"></th>
    <th>
        <a class="btn btn-primary" asp-controller="Category" asp-action="Category" asp-route-id="0">
            Insert
        </a>
    </th>
    </thead>
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Descrizione</th>
            <th scope="col" colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Category" asp-route-id="@category.CategoryID">
                        Edit
                    </a>
                </td>
                <td>
                    @if (category.CanDelete)
                    {
                        <a class="btn btn-primary" asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryID">
                            Delete
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-secondary" disabled>
                            Delete
                        </a>
                    }
                </td>
            </tr>

        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Category" asp-action="Category" asp-route-id="0">
    Insert
</a>

@await Html.PartialAsync("_Pagination", Model.Pagination)
